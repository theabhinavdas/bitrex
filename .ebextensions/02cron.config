files:
    "/etc/cron.d/mycron":
        mode: "000644"
        owner: root
        group: root
        leader_only: true
        content: |
            * * * * * root /usr/bin/php /var/app/current/cron.php
            * * * * * root /usr/bin/php /var/app/current/market.php

commands:
    remove_old_cron:
        command: "rm -f /etc/cron.d/*.bak"
